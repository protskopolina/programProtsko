<Window x:Class="лаб5._2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:лаб5._2"
        mc:Ignorable="d"
        Title="Автозаправка" Height="470" Width="900">

    <Grid Background="#fafafa">

        <Grid Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.2*"/>
                <ColumnDefinition Width="2.2*"/>
                <ColumnDefinition Width="1.6*"/>
            </Grid.ColumnDefinitions>

            <!-- === ПАЛЬНЕ === -->
            <GroupBox Header="Автозаправка" Grid.Column="0" Margin="10" FontWeight="Bold">
                <StackPanel Margin="15">
                    <Label Content="Вид пального:"/>
                    <ComboBox x:Name="cbFuel" Width="150" SelectionChanged="cbFuel_SelectionChanged">
                        <ComboBoxItem Content="A-92"/>
                        <ComboBoxItem Content="A-95"/>
                        <ComboBoxItem Content="Дизель"/>
                    </ComboBox>

                    <Label x:Name="lblResultHeader" Content="Ціна (грн/л):" Margin="0,10,0,0"/>
                    <TextBlock x:Name="tbPrice" 
                               Text="49.50" 
                               FontWeight="Bold" 
                               FontSize="16"
                               Foreground="DarkBlue"/>

                    <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                        <RadioButton x:Name="rbLiters" 
                                     Content="Кількість (л)" 
                                     Checked="rbLiters_Checked" 
                                     />
                        <RadioButton x:Name="rbSum" 
                                     Content="На суму (грн)" 
                                     Margin="20,0,0,0"
                                     />
                    </StackPanel>

                    <TextBox x:Name="tbInput"
                             Width="120"
                             Margin="0,10,0,10"
                             FontSize="14"
                             TextChanged="tbInput_TextChanged"/>

                    <Border BorderBrush="#cccccc" BorderThickness="1" Padding="10" Margin="0,10,0,0"
                            Background="#ffffff" CornerRadius="6">
                        <StackPanel>
                            <Label x:Name="lblResultHeader2" Content="До оплати:"/>
                            <TextBlock x:Name="tbResult" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="DarkGreen"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </GroupBox>

            <!-- === МІНІ-КАФЕ === -->
            <GroupBox Header="Міні-кафе" Grid.Column="1" Margin="10" FontWeight="Bold">
                <StackPanel Margin="15">

                    <!-- Елемент меню -->
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <CheckBox x:Name="cbHotdog" Content="Хот-дог" Width="120"
                                  Checked="cbCafe_Checked" Unchecked="cbCafe_Checked"/>
                        <TextBlock Text="40 грн" Width="70"/>
                        <TextBox x:Name="tbHotdogQty" Width="50" IsEnabled="False"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <CheckBox x:Name="cbBurger" Content="Гамбургер" Width="120"
                                  Checked="cbCafe_Checked" Unchecked="cbCafe_Checked"/>
                        <TextBlock Text="55 грн" Width="70"/>
                        <TextBox x:Name="tbBurgerQty" Width="50" IsEnabled="False"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <CheckBox x:Name="cbCola" Content="Кока-кола" Width="120"
                                  Checked="cbCafe_Checked" Unchecked="cbCafe_Checked"/>
                        <TextBlock Text="30 грн" Width="70"/>
                        <TextBox x:Name="tbColaQty" Width="50" IsEnabled="False"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <CheckBox x:Name="cbCoffee" Content="Кава" Width="120"
                                  Checked="cbCafe_Checked" Unchecked="cbCafe_Checked"/>
                        <TextBlock Text="25 грн" Width="70"/>
                        <TextBox x:Name="tbCoffeeQty" Width="50" IsEnabled="False"/>
                    </StackPanel>

                </StackPanel>
            </GroupBox>

            <!-- === СУМА === -->
            <GroupBox Header="До сплати" Grid.Column="2" Margin="10" FontWeight="Bold">
                <StackPanel Margin="20" VerticalAlignment="Center">

                    <Button x:Name="btnCalc" Content="Розрахувати"
                            Width="140" Height="35"
                            Background="#4caf50" Foreground="White"
                            FontWeight="Bold"
                            Click="btnCalc_Click"/>

                    <Label Content="Всього:" Margin="0,20,0,0"/>

                    <TextBlock x:Name="tbTotal" 
                               FontSize="26" 
                               FontWeight="Bold" 
                               Foreground="DarkGreen"
                               TextAlignment="Center"/>
                </StackPanel>
            </GroupBox>

        </Grid>
    </Grid>
</Window>
