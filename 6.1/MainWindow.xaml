<Window x:Class="AuthSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Система авторизації" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">

    <Window.Resources>
        <!-- Стиль для TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="40,10,10,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#6C63FF"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для PasswordBox -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="40,10,40,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#6C63FF"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопок -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для соціальних кнопок -->
        <Style x:Key="SocialButton" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для перемикача Login/Register -->
        <Style x:Key="TabButton" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#A0A0A0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                            <Border Height="3"
                                    Background="#6C63FF"
                                    VerticalAlignment="Bottom"
                                    CornerRadius="2"
                                    Visibility="{TemplateBinding Tag}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Градієнт для фону -->
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#667EEA" Offset="0"/>
            <GradientStop Color="#764BA2" Offset="0.5"/>
            <GradientStop Color="#F093FB" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>

    <Border Background="White" CornerRadius="15">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Ліва панель з інформацією -->
            <Border Grid.Column="0" Background="{StaticResource BackgroundGradient}"
                    CornerRadius="15,0,0,15">
                <StackPanel VerticalAlignment="Center" Margin="40">
                    <TextBlock Text="Вітаємо!" 
                               FontSize="36" 
                               FontWeight="Bold" 
                               Foreground="White"
                               Margin="0,0,0,20"/>

                    <TextBlock Text="Увійдіть до свого облікового запису та продовжуйте свою подорож з нами."
                               FontSize="14"
                               Foreground="#E0E0FF"
                               TextWrapping="Wrap"
                               Margin="0,0,0,40"/>

                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Ellipse Width="8" Height="8" Fill="#4ADE80" Margin="0,0,10,0"/>
                            <TextBlock Text="Безпечна авторизація" 
                                       Foreground="White" 
                                       FontSize="14"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Ellipse Width="8" Height="8" Fill="#4ADE80" Margin="0,0,10,0"/>
                            <TextBlock Text="Захист персональних даних" 
                                       Foreground="White" 
                                       FontSize="14"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="#4ADE80" Margin="0,0,10,0"/>
                            <TextBlock Text="Швидкий вхід через соцмережі" 
                                       Foreground="White" 
                                       FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Права панель з формами -->
            <Grid Grid.Column="1" Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Кнопка закриття -->
                <Button Content="✕" 
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Width="30" Height="30"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="18"
                        Foreground="#A0A0A0"
                        Cursor="Hand"
                        Click="CloseButton_Click"/>

                <!-- Перемикач Login/Register -->
                <StackPanel Grid.Row="0" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Margin="0,20,0,30">
                    <Button x:Name="LoginTabButton"
                            Content="Вхід" 
                            Width="100"
                            Style="{StaticResource TabButton}"
                            Tag="Visible"
                            Click="LoginTab_Click"/>
                    <Button x:Name="RegisterTabButton"
                            Content="Реєстрація" 
                            Width="100"
                            Style="{StaticResource TabButton}"
                            Tag="Collapsed"
                            Click="RegisterTab_Click"/>
                </StackPanel>

                <!-- Контейнер для форм -->
                <Grid Grid.Row="1">
                    <!-- Форма входу -->
                    <StackPanel x:Name="LoginForm" Visibility="Visible">
                        <!-- Повідомлення про помилку/успіх -->
                        <Border x:Name="LoginMessagePanel"
                                Background="#FEE2E2"
                                CornerRadius="8"
                                Padding="15"
                                Margin="0,0,0,20"
                                Visibility="Collapsed">
                            <TextBlock x:Name="LoginMessageText"
                                       Text="Помилка"
                                       Foreground="#DC2626"
                                       FontSize="12"
                                       TextWrapping="Wrap"/>
                        </Border>

                        <TextBlock Text="Email" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Foreground="#4B5563"
                                   Margin="0,0,0,8"/>

                        <Grid Margin="0,0,0,20">
                            <TextBox x:Name="LoginEmailBox"
                                     Style="{StaticResource ModernTextBox}"
                                     Tag="your@email.com"/>
                            <TextBlock Text="📧" 
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       Margin="15,0,0,0"
                                       IsHitTestVisible="False"/>
                        </Grid>

                        <TextBlock Text="Пароль" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Foreground="#4B5563"
                                   Margin="0,0,0,8"/>

                        <Grid Margin="0,0,0,30">
                            <PasswordBox x:Name="LoginPasswordBox"
                                        Style="{StaticResource ModernPasswordBox}"/>
                            <TextBlock Text="🔒" 
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       Margin="15,0,0,0"
                                       IsHitTestVisible="False"/>
                            <Button x:Name="LoginShowPasswordButton"
                                    Content="👁"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Width="30" Height="30"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Margin="0,0,10,0"
                                    Cursor="Hand"
                                    FontSize="16"
                                    Click="ShowPassword_Click"/>
                        </Grid>

                        <Button Content="Увійти"
                                Background="{StaticResource BackgroundGradient}"
                                Style="{StaticResource PrimaryButton}"
                                Margin="0,0,0,25"
                                Click="LoginButton_Click"/>

                        <StackPanel Orientation="Horizontal" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20">
                            <Border Height="1" Width="100" Background="#E0E0E0" VerticalAlignment="Center"/>
                            <TextBlock Text="Або увійдіть через" 
                                       Margin="15,0"
                                       Foreground="#A0A0A0"
                                       FontSize="12"/>
                            <Border Height="1" Width="100" Background="#E0E0E0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" 
                                   HorizontalAlignment="Center">
                            <Button Style="{StaticResource SocialButton}"
                                    Margin="5"
                                    ToolTip="Google"
                                    Click="GoogleLogin_Click">
                                <TextBlock Text="G" 
                                          FontSize="20" 
                                          FontWeight="Bold"
                                          Foreground="#DB4437"/>
                            </Button>
                            <Button Style="{StaticResource SocialButton}"
                                    Margin="5"
                                    ToolTip="Facebook"
                                    Click="FacebookLogin_Click">
                                <TextBlock Text="f" 
                                          FontSize="24" 
                                          FontWeight="Bold"
                                          Foreground="#1877F2"/>
                            </Button>
                            <Button Style="{StaticResource SocialButton}"
                                    Margin="5"
                                    ToolTip="Twitter"
                                    Click="TwitterLogin_Click">
                                <TextBlock Text="𝕏" 
                                          FontSize="20" 
                                          FontWeight="Bold"
                                          Foreground="#1DA1F2"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>

                    <!-- Форма реєстрації -->
                    <ScrollViewer x:Name="RegisterForm" 
                                 Visibility="Collapsed"
                                 VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Повідомлення про помилку/успіх -->
                            <Border x:Name="RegisterMessagePanel"
                                    Background="#FEE2E2"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,0,0,20"
                                    Visibility="Collapsed">
                                <TextBlock x:Name="RegisterMessageText"
                                           Text="Помилка"
                                           Foreground="#DC2626"
                                           FontSize="12"
                                           TextWrapping="Wrap"/>
                            </Border>

                            <TextBlock Text="Ім'я користувача" 
                                       FontSize="13" 
                                       FontWeight="SemiBold"
                                       Foreground="#4B5563"
                                       Margin="0,0,0,8"/>

                            <Grid Margin="0,0,0,15">
                                <TextBox x:Name="RegisterUsernameBox"
                                         Style="{StaticResource ModernTextBox}"/>
                                <TextBlock Text="👤" 
                                           FontSize="18"
                                           VerticalAlignment="Center"
                                           Margin="15,0,0,0"
                                           IsHitTestVisible="False"/>
                            </Grid>

                            <TextBlock Text="Email" 
                                       FontSize="13" 
                                       FontWeight="SemiBold"
                                       Foreground="#4B5563"
                                       Margin="0,0,0,8"/>

                            <Grid Margin="0,0,0,15">
                                <TextBox x:Name="RegisterEmailBox"
                                         Style="{StaticResource ModernTextBox}"/>
                                <TextBlock Text="📧" 
                                           FontSize="18"
                                           VerticalAlignment="Center"
                                           Margin="15,0,0,0"
                                           IsHitTestVisible="False"/>
                            </Grid>

                            <TextBlock Text="Телефон" 
                                       FontSize="13" 
                                       FontWeight="SemiBold"
                                       Foreground="#4B5563"
                                       Margin="0,0,0,8"/>

                            <Grid Margin="0,0,0,15">
                                <TextBox x:Name="RegisterPhoneBox"
                                         Style="{StaticResource ModernTextBox}"/>
                                <TextBlock Text="📱" 
                                           FontSize="18"
                                           VerticalAlignment="Center"
                                           Margin="15,0,0,0"
                                           IsHitTestVisible="False"/>
                            </Grid>

                            <TextBlock Text="Пароль" 
                                       FontSize="13" 
                                       FontWeight="SemiBold"
                                       Foreground="#4B5563"
                                       Margin="0,0,0,8"/>

                            <Grid Margin="0,0,0,15">
                                <PasswordBox x:Name="RegisterPasswordBox"
                                            Style="{StaticResource ModernPasswordBox}"/>
                                <TextBlock Text="🔒" 
                                           FontSize="18"
                                           VerticalAlignment="Center"
                                           Margin="15,0,0,0"
                                           IsHitTestVisible="False"/>
                            </Grid>

                            <TextBlock Text="Підтвердження пароля" 
                                       FontSize="13" 
                                       FontWeight="SemiBold"
                                       Foreground="#4B5563"
                                       Margin="0,0,0,8"/>

                            <Grid Margin="0,0,0,25">
                                <PasswordBox x:Name="RegisterConfirmPasswordBox"
                                            Style="{StaticResource ModernPasswordBox}"/>
                                <TextBlock Text="🔒" 
                                           FontSize="18"
                                           VerticalAlignment="Center"
                                           Margin="15,0,0,0"
                                           IsHitTestVisible="False"/>
                            </Grid>

                            <Button Content="Зареєструватися"
                                    Background="{StaticResource BackgroundGradient}"
                                    Style="{StaticResource PrimaryButton}"
                                    Click="RegisterButton_Click"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
