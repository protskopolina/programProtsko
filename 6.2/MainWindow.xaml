<Window x:Class="Game2048.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Гра 2048" Height="550" Width="450"
        KeyDown="Window_KeyDown" Focusable="True">

    <Grid Background="#faf8ef">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Рахунок -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <TextBlock Text="2048" FontSize="40" FontWeight="Bold" Foreground="#776e65"/>
            <Border Background="#bbada0" CornerRadius="5" Padding="15,5" Margin="20,0,0,0">
                <StackPanel>
                    <TextBlock Text="РАХУНОК" FontSize="10" Foreground="#eee4da"/>
                    <TextBlock x:Name="ScoreText" Text="0" FontSize="20" FontWeight="Bold" Foreground="White"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Поле -->
        <Border Grid.Row="1" Background="#bbada0" CornerRadius="8" Margin="20" Padding="8">
            <Grid x:Name="GameGrid">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
            </Grid>
        </Border>

        <!-- Кнопка -->
        <StackPanel Grid.Row="2" Margin="20">
            <Button Content="Нова гра" Click="NewGame_Click" Background="#8f7a66" 
                    Foreground="White" FontSize="16" FontWeight="Bold" Padding="15,8" BorderThickness="0"/>
            <TextBlock Text="Використовуйте стрілки ← ↑ → ↓" HorizontalAlignment="Center" 
                       Margin="0,10" Foreground="#776e65"/>
        </StackPanel>

        <!-- Game Over -->
        <Border x:Name="GameOverPanel" Grid.RowSpan="3" Background="#80000000" Visibility="Collapsed">
            <Border Background="White" CornerRadius="8" Padding="30" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock x:Name="GameOverText" FontSize="28" FontWeight="Bold" Foreground="#776e65"/>
                    <TextBlock x:Name="FinalScoreText" FontSize="18" Foreground="#776e65" Margin="0,10"/>
                    <Button Content="Ще раз" Click="NewGame_Click" Background="#8f7a66" 
                            Foreground="White" FontSize="14" FontWeight="Bold" Padding="15,8" 
                            BorderThickness="0" Margin="0,10"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>
