<Window x:Class="WpfApp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="КАЛЬКУЛЯТОР" Height="400" Width="300" Background="Aqua">
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="AliceBlue"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="BLUE"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4"
                   Background="#FFDED7D7" />
        <TextBox x:Name="txtDisplay" 
                 Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4"
                 Height="50" FontSize="26"
                 TextAlignment="Right"
                 IsReadOnly="True"
                 Text="0"
                 Margin="1,0,0,10"/>
        <Button Grid.Column="0" Grid.Row="2"
                Content="CE" Click="Clear_Click"/>
        <Button Grid.Column="1" Grid.Row="2"
                Content="C" Click="Clear_Click"/>
        <Button Grid.Column="2" Grid.Row="2" 
                Content="&lt;" Click="Backspace_Click"/>
        <Button Grid.Column="3" Grid.Row="2" 
                Content="/" Click="Operation_Click"/>
        <Button Grid.Column="0" Grid.Row="3" 
                Content="7" Click="Number_Click"/>
        <Button Grid.Column="1" Grid.Row="3" 
                Content="8" Click="Number_Click"/>
        <Button Grid.Column="2" Grid.Row="3" 
                Content="9" Click="Number_Click"/>
        <Button Grid.Column="3" Grid.Row="3" 
                Content="*" Click="Operation_Click"/>
        <Button Grid.Column="0" Grid.Row="4" 
                Content="4" Click="Number_Click"/>
        <Button Grid.Column="1" Grid.Row="4" 
                Content="5" Click="Number_Click"/>
        <Button Grid.Column="2" Grid.Row="4" 
                Content="6" Click="Number_Click"/>
        <Button Grid.Column="3" Grid.Row="4" 
                Content="-" Click="Operation_Click"/>
        <Button Grid.Column="0" Grid.Row="5" 
                Content="1" Click="Number_Click"/>
        <Button Grid.Column="1" Grid.Row="5" 
                Content="2" Click="Number_Click"/>
        <Button Grid.Column="2" Grid.Row="5" 
                Content="3" Click="Number_Click"/>
        <Button Grid.Column="3" Grid.Row="5" 
                Content="+" Click="Operation_Click"/>
        <Button Grid.Column="0" Grid.Row="6" 
                Content="." Click="Dot_Click"/>
        <Button Grid.Column="1" Grid.Row="6" 
                Content="0" Click="Number_Click"/>
        <Button Grid.Column="2" Grid.Row="6" Grid.ColumnSpan="2"
                Content="=" Click="Equal_Click"/>
    </Grid>
</Window>

     