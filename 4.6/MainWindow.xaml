<Window x:Class="_4._6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4._6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <!-- 2/3 ширини -->
            <ColumnDefinition Width="*"/>
            <!-- решта 1/3 -->
        </Grid.ColumnDefinitions>

        <!-- WrapPanel для кнопок -->
        <WrapPanel Grid.Column="0" Margin="5">
            <Button Content="Червоний" Background="red" Margin="2"/>
            <Button Content="Зелений" Background="Green" Margin="2"/>
            <Button Content="Синій" Background="Blue" Margin="2"/>
            <Button Content="Жовтий" Background="Yellow" Margin="2"/>
            <Button Content="Фіолетовий" Background="Purple" Margin="2"/>
            <Button Content="Помаранчевий" Background="Orange" Margin="2"/>
        </WrapPanel>

    </Grid>
</Window>
