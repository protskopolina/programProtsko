<Window x:Class="_4._4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4._4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="Button1" Content="Червона" Width="200" Height="100"
                Background="Red" Foreground="White"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20"
                Click="Button_Click"/>

        <Button x:Name="Button2" Content="Зелена" Width="200" Height="100"
                Background="Green" Foreground="Black"
                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20"
                Click="Button_Click"/>

        <Button x:Name="Button3" Content="Синя" Width="200" Height="100"
                Background="Blue" Foreground="Yellow"
                HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20"
                Click="Button_Click"/>

        <Button x:Name="Button4" Content="Жовта" Width="200" Height="100"
                Background="Yellow" Foreground="Black"
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20"
                Click="Button_Click"/>

        <Button x:Name="Button5" Content="Фіолетова" Width="200" Height="100"
                Background="Purple" Foreground="White"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Click="Button_Click"/>
    </Grid>
</Window>
