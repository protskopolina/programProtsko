<Window x:Class="_4._3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4._3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Blue">
    <Grid>
        <!-- Поле вводу -->
        <TextBox x:Name="MyTextBox"
                 Width="200"
                 Height="30"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"/>

        <!-- Кнопка Сховати -->
        <Button Content="Приховати"
                Width="80" Height="30"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="20,0,0,20"
                Click="HideButton_Click"/>

        <!-- Кнопка Показати -->
        <Button Content="Показати"
                Width="80" Height="30"
                HorizontalAlignment="Center" VerticalAlignment="Bottom"
                Margin="0,0,0,20"
                Click="ShowButton_Click"/>

        <!-- Кнопка Очистити -->
        <Button Content="Очистити"
                Width="80" Height="30" HorizontalAlignment="Right"  
                VerticalAlignment="Bottom"   Margin="0,0,20,20"
                Click="ClearButton_Click"/>

    </Grid>
</Window>
